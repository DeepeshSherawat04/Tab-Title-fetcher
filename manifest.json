{
    "manifest_version": 3,
    "name": "Tab Title Fetcher",
    "version": "1.0",
    "description": "Displaying current tab title when the button is clicked",
    "permissions": ["tabs"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/211688_forward_arrow_icon.png",
        "48": "icons/2849818_navigation_right_multimedia_arrow_back_icon.png",
        "128": "icons/8111422_leftlinearrow_leftarrow_arrow_arrows_back_icon.png"
      }
    }
  }
  